<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patienthomebkg"
    tools:context=".patient_home">

    <TextView
        android:id="@+id/exerciseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="The following list includes the current available exercises. Please choose one of the following."
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"/>

    <Button
        android:id="@+id/hip"
        android:layout_width="329dp"
        android:layout_height="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="40dp"
        android:text="Hip Flexor Stretch"
        android:textSize="25sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/disc"
        android:layout_width="329dp"
        android:layout_height="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="370dp"
        android:layout_marginRight="40dp"
        android:text="Disc Stretch"
        android:textSize="25sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/tricep"
        android:layout_width="329dp"
        android:layout_height="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="40dp"
        android:text="Tricep Stretch"
        android:textSize="25sp"
        app:cornerRadius="20dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/dchat_button"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="20dp"
        app:cornerRadius = "50dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_baseline_chat_bubble_24" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/info_button"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="140dp"
        app:cornerRadius = "50dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_baseline_info_24" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/setting_button"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="255dp"
        app:cornerRadius = "50dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_baseline_settings_24" />





</RelativeLayout>